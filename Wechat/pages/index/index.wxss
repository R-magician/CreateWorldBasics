/* 轮播图 */
.banners{
  width: 100%;
  height: 300rpx;
}
.banners image{
  width: 100%;
  height: 100%;
}
/* 5个图标 */
.navContainer{
  display: flex;
  align-items: space-around;
}
.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background-color: #fdfc52;
  font-size: 50rpx;
  margin: 20rpx 0;
}
.navItem .iconfont~text{
  font-size: 26rpx;
}

/* 推荐歌曲 */
.recommenContainer{
  padding: 20rpx;
  height: 410rpx;
}

/* 推荐内容区域 */
.recommedScroll{
  display: flex;
  height: 100%;
}
.scrollItem{
  margin-right: 20rpx;
}
.scrollItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size: 26rpx;
  /* 单号文本溢出省略号代替 */
  /* display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis; */
  /* 多行文本溢出省略号代替 */
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;  /* 设置对齐模式 */
  -webkit-line-clamp: 2;/* 设置盒子行数 */
}

/* 排行榜 */
.topListSwiper{
  height: 440rpx;
}
.topList{
  padding: 20rpx;
}
.swiperItem{
  width: 93%;
  background-color: #f3f3b6b2;
  padding-left: 20rpx;
  border-radius: 20rpx;
}
.swiperItem:last-child{
  padding-bottom: 20rpx;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem{
  /* 当一个元素设置为flex，其子元素会自动成为block元素 */
  display: flex;
  margin-bottom: 20rpx;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
} 
.musicItem .musicName{
  height: 100rpx;
  width: 60%;
  line-height: 100rpx;
   display: block;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}